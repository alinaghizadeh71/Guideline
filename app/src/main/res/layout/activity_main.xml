<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="0dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guidelines"
                android:layout_gravity="center"/>
            </LinearLayout>







        <LinearLayout android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="0dp">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/l1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="50.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="50.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/ct"
                        android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="CT"
                        android:layout_weight="1.0"
                        android:background="@drawable/selector_forbtn"
                        android:textColor="@color/light_font"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/cta"
                        android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="CTA"
                        android:layout_weight="1.0"
                        android:background="@drawable/selector_forbtn"
                        android:textColor="@color/light_font"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <Button
                        android:id="@+id/pdf"
                        android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="PDF"
                        android:layout_weight="1.0"
                        android:background="@drawable/selector_forbtn"
                        android:textColor="@color/light_font"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/l1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="50.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="50.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="wrap_content">

            <Spinner

                android:id="@+id/List"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:drawSelectorOnTop="true"
                android:background="@drawable/selector_forbtn"
                android:textColor="@color/light_font"
                android:textStyle="bold"
                android:spinnerMode="dropdown"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
               />

                    </LinearLayout>
            </RelativeLayout>


            </LinearLayout>
